{
  "name": "designer-plugin",
  "version": "1.0.0",
  "displayName": "GUI Designer",
  "description": "Visual GUI definition designer for creating and managing UI layouts",
  "main": "index.js",
  "author": "Puffin",
  "license": "MIT",
  "keywords": ["gui", "designer", "layout", "ui", "visual"],
  "extensionPoints": {
    "actions": ["saveDesign", "loadDesign", "listDesigns", "deleteDesign"],
    "ipcHandlers": [
      "designer:saveDesign",
      "designer:loadDesign",
      "designer:listDesigns",
      "designer:updateDesign",
      "designer:deleteDesign",
      "designer:renameDesign"
    ],
    "components": ["designer-view"]
  },
  "contributes": {
    "views": [
      {
        "id": "designer-view",
        "name": "Designer",
        "location": "nav",
        "icon": "ðŸŽ¨",
        "order": 50,
        "component": "DesignerView"
      }
    ],
    "commands": [
      {
        "id": "designer.showDesigner",
        "title": "Show GUI Designer",
        "category": "Designer"
      }
    ],
    "menus": {
      "tools": [
        {
          "command": "designer.showDesigner"
        }
      ]
    }
  },
  "activationEvents": [
    "onStartup"
  ],
  "renderer": {
    "entry": "renderer/components/index.js",
    "components": [
      {
        "name": "DesignerView",
        "export": "DesignerView",
        "type": "class",
        "description": "Main GUI designer view"
      }
    ],
    "styles": [
      "renderer/styles/designer-view.css"
    ]
  }
}
