{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "puffin://schemas/cre-assertions",
  "title": "CRE Inspection Assertions",
  "description": "Inspection assertions generated by the CRE",
  "type": "object",
  "additionalProperties": false,
  "required": ["assertions"],
  "properties": {
    "assertions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "target"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique assertion ID (format: IA + 3 digits, e.g. IA001)"
          },
          "criterion": {
            "type": "string",
            "description": "Which acceptance criterion this assertion verifies"
          },
          "type": {
            "type": "string",
            "enum": [
              "file_exists",
              "function_signature",
              "export_exists",
              "pattern_match",
              "import_exists",
              "file_contains"
            ]
          },
          "target": {
            "type": "string",
            "minLength": 1,
            "description": "File path relative to project root"
          },
          "message": {
            "type": "string",
            "description": "Human-readable description of what this assertion checks"
          },
          "description": {
            "type": "string",
            "description": "Alias for message (backwards compatibility)"
          },
          "assertion": {
            "type": "object",
            "description": "Type-specific assertion data (shape varies by type)"
          }
        }
      }
    }
  }
}
