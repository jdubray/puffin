{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "puffin://schemas/cre-plan",
  "title": "CRE Sprint Plan",
  "description": "Implementation plan with ordered items, shared components, and risks",
  "type": "object",
  "additionalProperties": false,
  "required": ["planItems"],
  "properties": {
    "planItems": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["order", "storyId", "title", "approach"],
        "additionalProperties": false,
        "properties": {
          "order": {
            "type": "integer",
            "minimum": 1,
            "description": "Execution order (dependencies first)"
          },
          "storyId": {
            "type": "string",
            "description": "ID of the user story this plan item implements"
          },
          "title": {
            "type": "string",
            "description": "Short title for this plan item"
          },
          "approach": {
            "type": "string",
            "description": "Technical approach summary"
          },
          "filesCreated": {
            "type": "array",
            "items": { "type": "string" },
            "description": "New files to create (relative paths)"
          },
          "filesModified": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Existing files to modify (relative paths)"
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Story IDs that must be completed first"
          },
          "complexity": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "notes": {
            "type": "string",
            "description": "Additional implementation notes"
          }
        }
      }
    },
    "sharedComponents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "purpose"],
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "string",
            "description": "File path of the shared component"
          },
          "purpose": {
            "type": "string",
            "description": "Why this component is shared"
          },
          "usedBy": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Story IDs that use this component"
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Implementation risks and concerns"
    },
    "changelog": {
      "type": "string",
      "description": "Summary of changes made during plan refinement"
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["storyId", "question", "reason"],
        "additionalProperties": false,
        "properties": {
          "storyId": {
            "type": "string",
            "description": "ID of the story this question relates to"
          },
          "question": {
            "type": "string",
            "description": "Follow-up clarifying question from refinement"
          },
          "reason": {
            "type": "string",
            "description": "Why this question matters for the refined plan"
          }
        }
      },
      "description": "Follow-up questions arising from plan refinement"
    }
  }
}
